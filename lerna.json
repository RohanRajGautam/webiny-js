{
  "packages": ["packages/*"],
  "version": "5.0.0-beta.0",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "api/**",
        "apps/**"
      ],
      "allowBranch": ["master", "next", "develop", "release-*", "v5"],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): publish %s :tada: :rocket:"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
